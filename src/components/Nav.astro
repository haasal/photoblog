---
const menuItems = ["Home", "Gallerie", "About"];
---

<nav class="w-64 text-xl">
  <ul class="flex justify-between">
    {
      menuItems.map((item) => (
        <li class="underline">
          <a href={item == "Home" ? "/" : item.toLocaleLowerCase()}>{item}</a>
        </li>
      ))
    }
  </ul>
</nav>
